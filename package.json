{
  "name": "pulse-admin-v2",
  "version": "0.0.1",
  "description": "Pulse Admin v2",
  "main": "server/app.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run _serverRun\" \"ng serve --aot=true --progress=false --proxy-config proxy.conf.json\"",
    "build": "ng build --prod --sm=false --aot=true --output-path=dist/client && npm run _serverBuild",
    "check": "npm run lint && npm run test",
    "lint": "echo '====== CHECK CLIENT-SIDE ======' && npm run lintClient && echo '====== CHECK SERVER-SIDE ======' && npm run lintServer && echo '====== CHECK STYLES ======' && npm run lintStyles",
    "test": "echo '====== TESTS CLIENT-SIDE ======' && npm run testClientCover && echo '====== TESTS SERVER-SIDE ======' && npm run testServerCover",
    "lintClient": "ng lint --format stylish --force true",
    "lintServer": "tslint './server/**/*.ts' -c ./tslint.server.json --format stylish --force true",
    "lintStyles": "sass-lint -c .sass-lint.yml -v -q",
    "testClient": "ng test --single-run=true",
    "testClientCover": "ng test --single-run=true --code-coverage",
    "testClientWatch": "ng test --watch",
    "testServer": "mocha -r ts-node/register server/**/*.spec.ts",
    "testServerCover": "nyc npm run testServer",
    "testServerWatch": "mocha -r ts-node/register server/**/*.spec.ts --watch-extensions ts --watch",
    "e2eClient": "ng e2e",
    "_serverRun": "tsc -p ./server && concurrently \"tsc -w -p ./server\" \"nodemon dist/server/bin/www.js\" ",
    "_serverBuild": "tsc -p ./server",
    "postinstall": "npm run build"
  },
  "author": "Balboa Features",
  "private": true,
  "dependencies": {
    "@angular-mdl/core": "4.0.6",
    "@angular/cli": "1.1.0",
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/compiler-cli": "4.1.3",
    "@angular/core": "4.1.3",
    "@angular/forms": "4.1.3",
    "@angular/http": "4.1.3",
    "@angular/platform-browser": "4.1.3",
    "@angular/platform-browser-dynamic": "4.1.3",
    "@angular/router": "4.1.3",
    "@types/body-parser": "1.16.3",
    "@types/compression": "0.0.33",
    "@types/express": "4.0.35",
    "@types/jasmine": "2.5.51",
    "@types/node": "7.0.27",
    "body-parser": "1.17.2",
    "compression": "1.6.2",
    "core-js": "2.4.1",
    "express": "4.15.3",
    "path": "0.12.7",
    "rxjs": "5.4.0",
    "ts-helpers": "1.1.2",
    "ts-node": "3.0.4",
    "tslint": "5.4.2",
    "typescript": "2.3.4",
    "zone.js": "0.8.11"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "codelyzer": "3.0.1",
    "concurrently": "3.4.0",
    "jasmine-core": "2.6.2",
    "jasmine-spec-reporter": "4.1.0",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.1.1",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.3.0",
    "karma-istanbul-threshold": "^1.2.2",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-remap-istanbul": "0.6.0",
    "mocha": "^3.4.2",
    "nodemon": "1.11.0",
    "nyc": "^11.0.2",
    "protractor": "5.1.2",
    "sass-lint": "^1.10.2",
    "sinon": "^2.3.2",
    "webdriver-manager": "12.0.6"
  }
}
